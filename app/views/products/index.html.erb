<p style="color: green"><%= notice %></p>

<h1>Products</h1>

<div class="container"><!-- Wraps all content and provides padding and a fixed width for the content inside it-->
  <div class="row"><!-- Contains columns which are used to create a responsive grid layout -->
    <% @products.each do |product| %>
      <div class="col-md-4"><!-- Column that will take up 4 units on medium and large screens -->
        <div class="card mb-4 shadow-sm"><!-- Card: To display content with a border box, mb-4: marging bottom and adds 1.5rem, shadow-sm:small shadow to give elevation effect -->
          <%= image_tag(product.image_url, class: "img-fluid") unless product.image_url.nil? %>
          <div class="card-body">
            <a href="#"><h5 class="card-title"><%= product.name %></h5></a>
            <p class="card-text"><%= product.description %></p>
            <p><strong>Price:</strong> <%= number_to_currency(product.price) %></p>
            <p><strong>Color:</strong> <%= product.color %></p>
            <strong>Image URL:</strong> <%= product.image_url %>
            <div class="d-flex justify-content-between align-items-center mt-3">
              <%= link_to 'Show', product, class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to 'Edit', edit_product_path(product), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'New Product', new_product_path, class: "btn btn-primary mt-3" %>
